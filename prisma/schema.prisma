generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Client {
  id            String    @id @default(cuid())
  name          String
  industry      String
  status        String    // active, inactive, pending
  contactPerson String
  email         String
  totalRevenue  Float
  lastActive    DateTime
  avatar        String?
  projects      Project[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Project {
  id          String   @id @default(cuid())
  title       String
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id])
  status      String   // on-track, at-risk, delayed, completed
  progress    Int
  dueDate     DateTime
  budget      Float
  description String
  team        String   // JSON string or comma-separated for simple storage
  tasks       Task[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Deal {
  id        String   @id @default(cuid())
  title     String
  company   String
  value     Float
  stage     String   // lead, qualified, proposal, negotiation, closed
  owner     String
  dueDate   DateTime
  priority  String   // low, medium, high
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id        String   @id @default(cuid())
  title     String
  assignee  String
  dueDate   DateTime
  priority  String   // low, medium, high, urgent
  status    String   // todo, in-progress, done
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Resource {
  id        String   @id @default(cuid())
  title     String
  type      String   // document, spreadsheet, presentation, template
  category  String
  author    String
  size      String
  url       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
